
<% provide(:title, "Log in") %>
<h1>Log in</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:session, url: login_path) do |f| %>
        <%= f.label :email %>
        <%= f.text_field :email %>
        <%= f.label :password %>
        <%= f.password_field :password %>
        <%= f.submit "Log in", class: "btn btn-primary" %>
    <% end %>

  </div>
  <p>Not Registered Yet? <%= link_to new_customer_path, class: 'btn btn-success' do %>
        <i class="glyphicon glyphicon-plus"></i> Register Here Now
    <% end %>

</div>
