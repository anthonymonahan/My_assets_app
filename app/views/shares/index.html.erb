<h1>Listing shares</h1>

<table>
  <thead>
    <tr>
      <th>Name of share</th>
      <th>Symbol</th>
      <th>Original value</th>
      <th>price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @shares.each do |share| %>
      <tr>
        <td><%= share.name_of_share %></td>
        <td><%= share.symbol %></td>
        <td><%= share.original_value %></td>
        <td><%= share.price %></td>


      </tr><tr>
        <td><%= link_to 'Show', share, class: 'btn btn-primary btn-xs' %></td>
        <td><%= link_to 'Edit', edit_share_path(share), class: 'btn btn-info btn-xs' %></td>
        <td><%= link_to 'Destroy', share, class: 'btn btn-danger btn-xs', method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

