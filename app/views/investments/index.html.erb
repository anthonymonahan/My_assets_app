<h1>Listing Investments</h1>

<table>
  <thead>
    <tr>
      <th>Type of Investment</th>
      <th>Price</th>
      <th>Original Value</th>
      <th>Profit/Loss</th>

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @investments.each do |investment| %>
      <tr>
        <td><%= investment.type_of_investment %></td>
        <td><%= investment.price %></td>
        <td><%= investment.original_value %></td>
        <td><%= investment.total %></td>

      </tr>
      <tr>
        <td><%= link_to 'Show', investment, class: 'btn btn-primary btn-xs' %></td>
        <td><%= link_to 'Delete', investment, class: 'btn btn-danger btn-xs', method: :delete, data: {confirm: 'Are you sure?'} %></td>
      </tr>
  <% end %>
  </tbody>
</table>


<br>

<%= link_to new_investment_path, class: 'btn btn-success' do %>
    <i class="glyphicon glyphicon-plus"></i> New Investment
<% end %>