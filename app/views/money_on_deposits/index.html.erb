<h1>Listing Money On Deposit</h1>

<table>
  <thead>
    <tr>
      <th>Institution</th>
      <th>Account number</th>
      <th>Amount</th>
      <th>Original Amount</th>
      <th>Profit/Loss</th>

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @money_on_deposits.each do |money_on_deposit| %>
      <tr>
        <td><%= money_on_deposit.institution %></td>
        <td><%= money_on_deposit.account_number %></td>
        <td><%= money_on_deposit.price %></td>
        <td><%= money_on_deposit.original_value %></td>
        <td><%= money_on_deposit.total %></td>


      </tr>
      <tr>
        <td><%= link_to 'Show', money_on_deposit, class: 'btn btn-primary btn-xs' %></td>
        <td><%= link_to 'Edit', edit_money_on_deposit_path(money_on_deposit), class: 'btn btn-info btn-xs' %></td>
        <td><%= link_to 'Delete', money_on_deposit, class: 'btn btn-danger btn-xs', method: :delete, data: {confirm: 'Are you sure?'} %></td>
      </tr>
  <% end %>
  </tbody>
</table>
</table>

<br>

<%= link_to new_money_on_deposit_path, class: 'btn btn-success' do %>
    <i class="glyphicon glyphicon-plus"></i> New deposit
<% end %>