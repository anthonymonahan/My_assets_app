<h1>Listing properties</h1>

<table>
  <thead>
    <tr>
      <th>address</th>
      <th>Current value</th>
      <th>Original value</th>
      <th>Profit/Loss</th>


      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @properties.each do |property| %>
      <tr>
        <td><%= property.address %></td>
        <td><%= property.price %></td>
        <td><%= property.original_value %></td>
        <td><%= property.total %></td>


      </tr><tr>
    <td><%= link_to 'Show', property, class: 'btn btn-primary btn-xs' %></td>
    <td><%= link_to 'Edit', edit_property_path(property), class: 'btn btn-info btn-xs' %></td>
    <td><%= link_to 'Delete', property, class: 'btn btn-danger btn-xs', method: :delete, data: {confirm: 'Are you sure?'} %></td>
  </tr>
  <% end %>
  </tbody>
</table>
</table>

<br>

<%= link_to new_property_path, class: 'btn btn-success' do %>
    <i class="glyphicon glyphicon-plus"></i> New Property
<% end %>